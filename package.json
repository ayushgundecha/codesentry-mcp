{
  "name": "codesentry-mcp",
  "version": "1.0.0",
  "description": "AI-Powered Code Review Assistant using Model Context Protocol",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "precommit": "npm run lint && npm run type-check && npm run security:audit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "code-review",
    "ai",
    "security",
    "static-analysis",
    "developer-tools"
  ],
  "author": "Ayush Gundecha",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ayushgundecha/codesentry-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/ayushgundecha/codesentry-mcp/issues"
  },
  "homepage": "https://github.com/ayushgundecha/codesentry-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "simple-git": "^3.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "acorn": "^8.11.3",
    "openai": "^4.24.1",
    "@anthropic-ai/sdk": "^0.24.3",
    "semver": "^7.5.4",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/semver": "^7.5.6",
    "typescript": "^5.3.3",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "vitest": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "prettier": "^3.2.4"
  }
}